@using CourseAplicationMVC.Models
@model ChangePasswordModel
           
@{
    ViewBag.Title = @User.Identity.Name + " Password Change";
}

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
    {
    
     <fieldset>
            <legend>Account Information</legend>

        @Html.LabelFor(m => m.OldPassword):<br />
        @Html.PasswordFor(m => m.OldPassword)
        @Html.ValidationMessageFor(m => m.OldPassword)<br />

        @Html.LabelFor(m => m.Password):<br />       
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)<br />       

        @Html.LabelFor(m => m.PassConfirm):<br />    
        @Html.PasswordFor(m => m.PassConfirm)
        @Html.ValidationMessageFor(m => m.PassConfirm)<br />        
        
         <input type="submit" value="Change" />

         </fieldset>
}