<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Body.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui-1.8.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="http://code.jquery.com/jquery-1.5.2.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
<!--<script src="../../Scripts/autosuggest.js" type="text/javascript"></script>-->
    <script src="../../Scripts/jquery-ui-1.8.11.min.js" type="text/javascript"></script>
    <script src="../../Scripts/Pagination.js" type="text/javascript"></script>
    <script src="../../Scripts/orderby.js" type="text/javascript"></script>
    <script type="text/javascript" src="../../Scripts/AccordionScript.js"></script>
 
 <script type="text/javascript">
     $.ajaxSetup({ type: "post" });
     $(document).ready(function () {
         $("input#searchQuery").autocomplete({
             source: '@Url.Action("Find", "Search")', minChars: 1, delay: 500
         });
     });
 </script>
  
       
</head>



<body>
<header id="header1">

<!-- header-content -->

<div id="content-header">

  <!-- logo -->

  <div id="logo"> 
    <div id="title">ISEL Course Aplication</div>
       <!--  <a href="http://pdclinks.net/forum/index.php" title="pdclinks.net">
         <img src="http://pdclinks.net/forum/Themes/default/s7_img/logo.png" title="pdclinks.net" alt="pdclinks.net">
         </a>-->
  </div>

  <!-- main-menu -->

  <nav id="main-menu">
		<div id="main_menu">
			<ul class="dropmenu">

            <li>
              @Html.ActionLink("Home", "Index", "Home")
              </li>
              <li>
                @Html.ActionLink("Fuc List", "Index", "Fuc")
             </li>
                @if(Request.IsAuthenticated)
                {
                    <li>
                    @Html.ActionLink("Create New Fuc", "Create", "NewFucProposal")
                     </li>
                    <li>
                    @Html.ActionLink("Fuc Proposal List", "Index", "Proposal")
                     </li>
                    <li>
                    @Html.ActionLink("New Fuc Proposal List", "Index", "NewFucProposal")
                     </li>
                }
			</ul>
		</div> 

  </nav>
  <!-- /main-menu -->
  
</div>
<!-- /float-header -->

</header>

 <div class="register">
                   @if (Request.IsAuthenticated)
                    {
                        <text>Welcome <strong class="register_users_stats"> @Html.ActionLink(@User.Identity.Name, "Detail", "Profile") </strong>
    
                            [ @Html.ActionLink("Log Off", "LogOff", "Account") ]</text>
                    
                    
                        if (User.IsInRole("admin"))
                        {
                            @Html.ActionLink("Manage Roles", "Admin", "Account")
                        }
                    }
                    else
                    {
                        @Html.ActionLink("Register", "Index", "Register")
                        @:[ @Html.ActionLink("Log In", "LogOn", "Account") ]
                    }

                  

</div>
<div align="center">
  <div id="search">
                     @using (Html.BeginForm("Index", "Search", FormMethod.Post))
                        {
                        
                            <input value="Search" type="text" id="searchQuery" name="query" onclick="value=''"/>
                            <input type="submit" value="Go"/>
                            <div id="autosuggest"><ul></ul></div>
                        }
                    </div>
                    </div>
        <div class="page_content"> 
        
           <div class="page_content_body">
               @RenderBody()
           </div>

           <div class="footer">
