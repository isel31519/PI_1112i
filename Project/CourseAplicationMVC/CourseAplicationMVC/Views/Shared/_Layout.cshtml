<body>
    <div class="page">

     <div class="header">
   
          <div id="title">
            <h1>ISEL Course Aplication</h1>
          </div>
            <div id="search">
            
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                   <input type="text" value="Search"/>
                   <input type="submit" value="Go"/>
                }

            </div>
            <div id="login">
                  @if (Request.IsAuthenticated)
                  {
                      <text>Welcome <strong> @Html.ActionLink(@User.Identity.Name, "Detail", "Profile") </strong>
    
                          [ @Html.ActionLink("Log Off", "LogOff", "Account") ]</text>
                      <br />

                      if (User.IsInRole("admin"))
                      {
                          @Html.ActionLink("Manage Roles", "Admin", "Account")
                      }
                  }
                  else
                  {
                        @Html.ActionLink("Register", "Index", "Register")
                        @:[ @Html.ActionLink("Log In", "LogOn", "Account") ]
                    } 
            </div>

           <div id="links">
                 @Html.ActionLink("Home", "Index", "Home")
            </div>
        </div>
     <div id="leftcol"> 
        @if(Request.IsAuthenticated)
         {
            @Html.ActionLink("Create New Fuc", "Create", "NewFucProposal")<br />
            @Html.ActionLink("Fuc Proposal List", "Index", "Proposal")<br />
            @Html.ActionLink("New Fuc Proposal List", "Index", "NewFucProposal")<br />
          }

        @Html.ActionLink("Fuc List", "Index", "Fuc")<br />
     </div>

        <div id="main">
            @RenderBody()
        </div>
    </div>
</body>

</html>
