
@using CourseAplicationMVC.Models
@model RegisterUserModel

@{
    ViewBag.Title = "Registration";
}

@Html.ActionLink("Home", "Index", "Home")


@using (Html.BeginForm("Index", "Register", FormMethod.Post))
    {
    
     <fieldset>
            <legend>Account Information</legend>

     
        @Html.LabelFor(m => m.Username):<br />
       
        @Html.TextBoxFor(m => m.Username)
        @Html.ValidationMessageFor(m => m.Username)<br />
       

        @Html.LabelFor(m => m.Password):<br />
       
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)<br />
       

        @Html.LabelFor(m => m.PassConfirm):<br />
    
        @Html.PasswordFor(m => m.PassConfirm)
        @Html.ValidationMessageFor(m => m.PassConfirm)<br />
     
        
        @Html.LabelFor(m => m.Email):<br />
       
        @Html.TextBoxFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)<br />
        
        
         <input type="submit" value="Register" />

         </fieldset>
}