<script src="http://code.jquery.com/jquery-1.5.2.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('a.accordion').click(function (e) {
            e.preventDefault();
            $(this).parent().find('div.accordion').slideDown();
            var http = new XMLHttpRequest();
            console.log($(this).attr("href"));
            http.open("GET", $(this).attr("href")+"?partial=true", false);
            http.onreadystatechange = window.useHttpResponse;
            http.send(null);

            if (http.readyState == 4 && http.status == 200) {
                var textout = http.responseText;
                console.log(textout);
                $('#newFucDetail').html(textout);
            }
        });
    });
</script>




<div>
    @foreach (var f in Model)
    {
        <a href=@Url.Action("Detail", "NewFucProposal",new { @id = f.Idx }) id="linkDetail" class="accordion"> Proposta @f.Idx</a>  
    }
    
    <div id="newFucDetail" class="accordion"/>
</div>


